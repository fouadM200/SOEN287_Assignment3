<!-- Exercice 4 - Step 3 of the Running Project - Adopt a Dog/Cat -->
<!-- Browse available pets page -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Exercice 4 - Available Cats</title>
        <link rel="stylesheet" href="Question7.css">
        <meta charset="utf-8">
        <script src="javascript.js"></script>
    </head>
    <body>
        <!-- header of the webpage -->
        <%- include('header') %>

        <!-- Side menu bar-->
        <%- include('menu') %>

        <!-- Content of the browse available pets-->
        <div class="content">
            <h1>Available Cats</h1>
            <% cats.forEach(function(cat) { %>
                <p>
                    Breed: <span><b><%= cat.breed %></b></span><br>
                    Age: <span><b><%= cat.age %></b></span><br>
                    Gender: <span><b><%= cat.gender %></b></span><br>
                    Gets along with other dogs: <span><b><%= cat.otherDogs%></b></span><br>
                    Gets along with other cats: <span><b><%= cat.otherCats %></b></span><br>
                    Gets along with small children: <span><b><%= cat.smallChildren %></b></span><br>
                    <button onclick="alert('Interested in this dog!')">Interested</button>
                </p>
            <% }); %>
        </div>

        <!-- Footer -->
        <%- include('footer') %>
    </body>
</html>

