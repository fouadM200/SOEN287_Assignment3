<!-- Create Account page -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Exercice 4 - Create an Account</title>
        <link rel="stylesheet" href="Question7.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="utf-8">
        <script src="javascript.js"></script>
    </head>
    <body>
        <!-- header of the webpage -->
        <%- include('header') %>

        <!-- Side menu bar-->
        <%- include('menu') %>

        <!-- Content of the home page-->
            <div class="content">
                <h1>Create an Account</h1>
                <h3>Please create a new account:</h3>
                <form action="/create_account" method="post">
                    <label for="username" style="margin-left: 20px;">Username: 
                        <input type="text" name="username" id="username">
                    </label> <br>
                    <label for="password" style="margin-left: 20px;">Password: 
                        <input type="password" name="password" id="password">
                    </label>
                    <br> <br>
                    <button style="margin-left: 20px;">Create an account</button>
                    <input type="reset" name="reset" id="reset">
                </form>
                <br>
                <b>Notice:</b>
                <p style="margin-left: 20px;">
                    - The username can contain digits, upper and lower case letters.
                </p>
                <p style="margin-left: 20px;">
                    - The password must be at least 4 characters long (characters are to be letters and digits only) and have at least one letter and at least one digit.
                </p>
                <br>
                <p style="margin-left: 20px; color: blue;">
                    <%= message %>
                </p>
            </div>  
        
        <!-- Footer -->
        <%- include('footer') %>
    </body>
</html>

